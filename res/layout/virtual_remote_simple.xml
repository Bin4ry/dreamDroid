<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" >

            <TableRow>

                <Button
                    android:id="@+id/ButtonVolP"
                    style="@style/RemoteButton"
                    android:layout_column="1"
                    android:background="@drawable/button_key_square"
                    android:text="V+" />

                <Button
                    android:id="@+id/Button1"
                    style="@style/RemoteButton.Medium"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="1" />

                <Button
                    android:id="@+id/Button2"
                    style="@style/RemoteButton.Medium"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="2" />

                <Button
                    android:id="@+id/Button3"
                    style="@style/RemoteButton.Medium"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="3" />

                <Button
                    android:id="@+id/ButtonBouP"
                    style="@style/RemoteButton"
                    android:layout_column="1"
                    android:background="@drawable/button_key_square"
                    android:text="B+" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/ButtonVolM"
                    style="@style/RemoteButton"
                    android:layout_column="1"
                    android:background="@drawable/button_key_square"
                    android:text="V-" />

                <Button
                    android:id="@+id/Button4"
                    style="@style/RemoteButton.Medium"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="4" />

                <Button
                    android:id="@+id/Button5"
                    style="@style/RemoteButton.Medium"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="5" />

                <Button
                    android:id="@+id/Button6"
                    style="@style/RemoteButton.Medium"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="6" />

                <Button
                    android:id="@+id/ButtonBouM"
                    style="@style/RemoteButton"
                    android:layout_column="1"
                    android:background="@drawable/button_key_square"
                    android:text="B-" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/Button7"
                    style="@style/RemoteButton.Medium"
                    android:layout_column="2"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="7" />

                <Button
                    android:id="@+id/Button8"
                    style="@style/RemoteButton.Medium"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="8" />

                <Button
                    android:id="@+id/Button9"
                    style="@style/RemoteButton.Medium"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="9" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/ButtonLeftArrow"
                    style="@style/RemoteButton.Medium"
                    android:layout_column="2"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="&lt;" />

                <Button
                    android:id="@+id/Button0"
                    style="@style/RemoteButton.Medium"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="0" />

                <Button
                    android:id="@+id/ButtonRightArrow"
                    style="@style/RemoteButton.Medium"
                    android:background="@drawable/button_key_oval_grey"
                    android:text=">" />

                <Button
                    android:id="@+id/ButtonPower"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_oval_red"
                    android:text="PWR" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp" >

            <TableRow>

                <Button
                    android:id="@+id/ButtonMute"
                    style="@style/RemoteButton"
                    android:layout_column="1"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="Mute" />

                <Button
                    android:id="@+id/ButtonInfo"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="Info" />

                <Button
                    android:id="@+id/ButtonUp"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_square"
                    android:text="UP" />

                <Button
                    android:id="@+id/ButtonMenu"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="Menu" />

                <Button
                    android:id="@+id/ButtonExit"
                    style="@style/RemoteButton"
                    android:layout_column="1"
                    android:background="@drawable/button_key_oval_red"
                    android:text="Exit" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/ButtonLeft"
                    style="@style/RemoteButton"
                    android:layout_column="2"
                    android:background="@drawable/button_key_square"
                    android:text="LEFT" />

                <Button
                    android:id="@+id/ButtonOk"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_square"
                    android:text="OK" />

                <Button
                    android:id="@+id/ButtonRight"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_square"
                    android:text="RIGHT" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/ButtonAudio"
                    style="@style/RemoteButton"
                    android:layout_column="2"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="Audio" />

                <Button
                    android:id="@+id/ButtonDown"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_square"
                    android:text="DOWN" />

                <Button
                    android:id="@+id/ButtonPvr"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_oval_grey"
                    android:text="Video" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp" >

            <TableRow>

                <Button
                    android:id="@+id/ButtonRed"
                    android:layout_column="1"
                    android:background="@drawable/button_key_oval_red" />

                <Button
                    android:id="@+id/ButtonGreen"
                    android:background="@drawable/button_key_oval_green" />

                <Button
                    android:id="@+id/ButtonYellow"
                    android:background="@drawable/button_key_oval_yellow" />

                <Button
                    android:id="@+id/ButtonBlue"
                    android:background="@drawable/button_key_oval_blue" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/ButtonTv"
                    style="@style/RemoteButton"
                    android:layout_column="1"
                    android:background="@drawable/button_key_oval_black"
                    android:text="TV" />

                <Button
                    android:id="@+id/ButtonRadio"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_oval_black"
                    android:text="RADIO" />

                <Button
                    android:id="@+id/ButtonText"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_oval_black"
                    android:text="TEXT" />

                <Button
                    android:id="@+id/ButtonHelp"
                    style="@style/RemoteButton"
                    android:background="@drawable/button_key_oval_black"
                    android:text="Help" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>